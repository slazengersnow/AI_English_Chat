{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".", // ★ 追加：相対解決の基準を固定
    "module": "NodeNext", // ★ ESM（import.meta, top-level await対応）
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"],
  "exclude": [
    "node_modules",
    "client",
    "dist",
    "server/routes.ts", // 必要なら残す
    "server/storage.ts" // 必要なら残す
  ]
}
