{
  "compilerOptions": {
    "target": "ES2020",
    "module": "esnext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "."
    // "paths": {
    //   "@shared/*": ["shared/*"]
    // }
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["node_modules", "server/routes.ts", "server/admin-routes.ts"]
}
